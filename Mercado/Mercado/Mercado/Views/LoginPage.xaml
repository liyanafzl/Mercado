<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mercado.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="30" HorizontalOptions="Center" VerticalOptions="Center">
            <StackLayout Orientation="Horizontal">
                <Label Text="User Name" FontSize="Medium" WidthRequest="200"/>
                <Entry Placeholder="Enter your user name" WidthRequest="200"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Password" FontSize="Medium" WidthRequest="200"/>
                <Entry Placeholder="Enter your password" WidthRequest="200"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>