<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mercado.Views.SignUpPage"
             BackgroundColor="White">
    <ContentPage.Content>

        <StackLayout Padding="30">
            <Image Source="logo"/>
            <StackLayout Orientation="Horizontal">
                <Image Source="username" Margin="0,50,0,0"/>
                <Entry Placeholder="Username" WidthRequest="260" Margin="0,50,0,0"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Image Source="phone"/>
                <Entry Placeholder="Mobile number" WidthRequest="260"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Image Source="email"/>
                <Entry Placeholder="E-mail ID" WidthRequest="260"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Image Source="pass"/>
                <Entry Placeholder="Create Password" WidthRequest="260"/>
            </StackLayout>
            <Button Text="Sign up" TextColor="White" BackgroundColor="#cd344b" HorizontalOptions="Center"  Clicked="SignUpClicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>